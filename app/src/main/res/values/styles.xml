<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:listDivider">?attr/drawerSelectedColor</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashScreenTheme" parent = "Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name = "ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="backgroundColor">?attr/bgColor</item>
        <item name="android:textColorPrimary">?attr/textColor</item>
        <item name="iconTint">?attr/textColor</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">@color/colorPrimaryDark</item>
        <item name="bgColor">@color/colorPrimary</item>
        <item name="drawerSelectedColor">@color/drawer_bg_light</item>
        <item name="cancelButtonColor">@color/cancel_light</item>
    </style>
`
    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">@color/colorPrimary</item>
        <item name="bgColor">@color/colorPrimaryDark</item>
        <item name="drawerSelectedColor">@color/drawer_bg_dark</item>
        <item name="cancelButtonColor">@color/cancel_dark</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">?attr/textColor</item>
        <item name="android:textColorHint">@color/defaultGray</item>
        <item name="hintTextColor">?attr/textColor</item>
        <item name="android:theme">@style/cursorTheme</item>
    </style>
    <style name="cursorTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">?attr/textColor</item>
    </style>

    <style name="DropDownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:theme">@style/MenuBackground</item>
    </style>
    <style name="MenuBackground" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorSurface">?attr/bgColor</item>
    </style>

    <style name="AlertDialogTheme" parent= "Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/themed_dialog_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">?attr/textColor</item>
        <item name="android:textAppearanceSmall">@style/SmallTextStyleDialog</item>
        <item name="android:textAppearanceMedium">@style/TitleTextStyleDialog</item>
    </style>

    <style name="SmallTextStyleDialog" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TitleTextStyleDialog" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

</resources>
